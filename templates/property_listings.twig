<div class="!max-w-[1024px]">
    <div class="flex flex-wrap -mx-3">
        {% for listing in listings %}
            <div class="w-full sm:w-1/2 lg:w-1/3 px-3 mb-6">
                <div class="bg-white shadow rounded-lg overflow-hidden h-full flex flex-col">
                    {% if listing.image_html %}
                        {{ listing.image_html|raw }}
                    {% else %}
                        <img src="{{ placeholder_image }}" alt="Placeholder Image"
                             class="w-full h-50 object-cover">
                    {% endif %}
                    <div class="p-4 flex flex-col flex-grow">
                        <h4 class="text-lg font-semibold text-gray-900 mb-1 break-words">{{ listing.post_title }}</h4>
                        <p class="text-green-600 font-bold mb-1">${{ listing.price|number_format }}</p>
                        <p class="text-sm text-gray-500 mb-4">{{ listing.status }}</p>
                        <a href="{{ listing.link }}"
                           class="wp-element-button inline-block mt-auto text-center">
                            View Listing
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="col-span-full text-center text-gray-500">No listings found.</p>
        {% endfor %}
    </div>
</div>